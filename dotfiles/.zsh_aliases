# ls aliases
alias lla='ls -lAFG'
alias ll='ls -lG'
alias la='ls -AFG'
alias l='ls -CFG'

# history aliases
alias 'h=history | tail -n 15'
alias 'hg=history | rg'

# cd aliases
alias ...='cd ../..'
alias ....='cd ../../..'

# Node aliases
alias npmout='npm outdated -g --depth=0'

# git aliases
alias gst='git status'
alias gb='git branch'
alias gba='git branch -a'
alias glog='git log --oneline --graph'

# Python aliases
alias mkpy3venv='python3 -m venv'

# IBM Cloud aliases
alias ic='ibmcloud'
